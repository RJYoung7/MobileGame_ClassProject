<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRP.Views.Battle.RoundEndPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Success: Round 1 Cleared!" FontSize="Large" />
            <ScrollView>
                <ListView>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="IMAGE HERE" />
                                    <StackLayout Orientation="Vertical">
                                        <Label Text="NAME" />
                                        <Label Text="INFO" />
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
            <Button Text="Items Dropped"/>
            <Button Text="Begin Next Round" FontSize="Medium"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>