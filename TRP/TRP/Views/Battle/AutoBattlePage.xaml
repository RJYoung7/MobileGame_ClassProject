<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRP.Views.Battle.AutoBattlePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="Center" 
                         VerticalOptions="Start"
                         Orientation="Vertical">

                <Image Source="Baby.png" 
                       VerticalOptions="Center" 
                       HeightRequest="150"
                       HorizontalOptions="Fill"/>

                <Label FontSize="Large"
                       Text="TRP Auto Battle"
                       VerticalOptions="Center" 
                       HorizontalOptions="CenterAndExpand"
                       FontFamily="{StaticResource Title}"/>

                <Label Text="Battle Modes"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand"
                       FontFamily="{StaticResource Body}"/>
                
                <Button Text="Auto Battle"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand" 
                        Clicked="AutoBattleButton_Command"
                        Style="{StaticResource LargeButton}"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>